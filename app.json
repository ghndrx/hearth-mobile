{
  "expo": {
    "name": "Hearth",
    "slug": "hearth-mobile",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "hearth",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1e1f22"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "io.hearth.mobile",
      "infoPlist": {
        "NSCameraUsageDescription": "Hearth needs camera access to take photos and videos to share in chat.",
        "NSPhotoLibraryUsageDescription": "Hearth needs photo library access to share images in chat.",
        "NSMicrophoneUsageDescription": "Hearth needs microphone access for voice messages and calls.",
        "NSFaceIDUsageDescription": "Hearth uses Face ID for secure authentication."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1e1f22"
      },
      "package": "io.hearth.mobile",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECORD_AUDIO",
        "USE_BIOMETRIC",
        "USE_FINGERPRINT"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-local-authentication",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#5865f2"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Hearth to access your camera for sharing photos and videos."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Hearth to access your photos for sharing in chat."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": ""
      }
    }
  }
}
